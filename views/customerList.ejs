<%- include('partials/head')%>
<%- include('partials/nav')%>

<div id="successDiv">
  <!-- message will be here clicked submit -->
</div>

<div id="searchDiv">
  <label for="seach"></label>
  <input id="searchInput" class="inputs" type="search" name="search"
    placeholder="Search...   first name, last name, or phone number">
  <i id="searchCustomerIcon" class="fas fa-search pointer"></i>
  <div id="foundCustomerDiv">
    <!-- data will be here if found the customer -->
  </div>
</div>
<h2 class="subTitle">All Customers</h2>
<div id="customerList">
  <ul id="tableHeader">
    <li class="col">customerID</li>
    <li class="col">Name</li>
    <li class="col">email</li>
    <li class="col">Phone number</li>
    <li class="col">Address</li>
    <li>
      <!-- icons column -->
    </li>
  </ul>

  <!-- The below form disply when users clicked the Add Work History button (data insert from client side)-->
  <div id="mainAddWorkDiv" class="workForm">
    <p id="cusNameP">
      <!-- customerName cinsert from client side -->
    </p>
    <label for="date">Date</label>
    <input id="cusDateInput" class="inputs cusInput" type="date" name="date"><br>
    <label for="work">Service</label>
    <input id="cusWorkInput" class="inputs cusInput" type="text" name="work" placeholder="e.g. Fixed pump"><br>
    <button id="cusSubmitWork" class="submitNewWork smallBtnOne">Submit</button>
    <button id="cusWorkCancel" class="cancel smallBtnOne">Cancel</button>
  </div>

  <div id="dataDiv">
    <!-- customer data come from database -->
  </div>
</div>
